{% if items|length > 0 %}
  <div class="flyntComponent centerContainerGrid" is="flynt-block-listing-models">
    <div class="container">        
      <ul class="grid">
        {% for item in items %}
          <li class="grid-item">
              <div class="content">
                <a href="{{ item.link }}"  class="content-inner boxPadding content-readMore" aria-hidden="true" tabindex="-1">
                  <h2 class="content-title">{{ item.title }}</h2>
                  {# {% if item.content %}
                    {{ item.content|e('wp_kses_post') }}
                  {% endif %} #}
                </a>
                <a href="{{ item.link }}" class="button button--link content-readMore" aria-hidden="true" tabindex="-1">
                  <img class="content-image lazyload"
                    src="{{ item.thumbnail.src }}"
                    srcset="{{ placeholderImage(3, 2) }}"
                    data-srcset="{{ item.thumbnail.src }}"
                    alt="{{ item.thumbnail.alt|e }}">
                </a>
            {# <footer class="content-footer">
              <div class="content-footer-inner">
                {% if item.content %}
                  {{ item.content|e('wp_kses_post') }}
                {% endif %}
                <a href="{{ item.link }}" class="button button--link content-readMore" aria-hidden="true" tabindex="-1">{{ labels.readMore }}</a>
              </div>
            </footer> #}
            </li>
        {% endfor %}
      </ul>
    </div>
  </div>
{% endif %}
